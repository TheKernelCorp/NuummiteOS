# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# crystal files
[*.cr]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true

# nasm files
[*.asm]
charset = ascii
indent_size = 2
indent_style = space
insert_final_newline = false